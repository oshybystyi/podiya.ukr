
extends layout

block body
  body#login-page
    - if (env === 'dev')
        include includes/navbar

    .container
      .row
        #credentials-block.col-lg-4.clearfix
          h1= title
          #form
            form(method='post', action='')
              .form-group
                label(for='user') Користувач
                input(
                  type='text',
                  name='user',
                  class='form-control',
                  placeholder='Користувач',
                  autofocus
                )
              .form-group
                label(for='password') Пароль
                input(
                  type='password',
                  name='password',
                  class='form-control',
                  placeholder='Пароль'
                )

              button(type='submit', class='btn btn-primary btn-lg') Вхід

    include includes/footer
